<!-- Formulario para agregar productos -->
<h2>AGREGAR PRODUCTOS</h2>
<form
  id="addProductForm"
  enctype="multipart/form-data"
  class="mt-5 mx-5 pt-3 px-5"
>
  <label for="title">Título</label>
  <input type="text" name="title" placeholder="Título" />
  <br />
  <label for="description">Descripción</label>
  <input type="text" name="description" placeholder="Estilo" />
  <br />
  <label for="code">Código</label>
  <input type="text" name="code" placeholder="Código" />
  <br />
  <label for="price">Precio</label>
  <input type="number" name="price" placeholder="Precio" />
  <br />
  <label for="stock">Stock</label>
  <input type="number" name="stock" placeholder="Stock" />
  <br />
  <label for="category">Categoría</label>
  <select name="category">
    <option value="vegano">blanca</option>
    <option value="vegetariano">negra</option>
  </select>
  <br />
  <label for="thumbnail">Imagen (NO FUNCIONA)</label>
  <input type="file" name="thumbnail" />
  <br />
  <button ontype="submit">Agregar</button>
</form>

<!-- Productos -->
<div id="cardProductsContainer" class="app-content container"></div>

<script src="/socket.io/socket.io.js"></script>
<script type="module" src="/js/realTimeProducts.js"></script>